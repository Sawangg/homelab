{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "apps/staging/**",
        "infrastructure/staging/**",
        "clusters/staging/**"
      ],
      "automerge": true,
      "labels": [
        "dependencies",
        "cluster: staging"
      ]
    },
    {
      "matchFileNames": [
        "apps/production/**",
        "infrastructure/production/**",
        "clusters/production/**"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "cluster: prod"
      ]
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/apps/.+\\.ya?ml$/",
      "/infrastructure/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      "/infrastructure/.*/repository\\.ya?ml$/",
      "/infrastructure/.*/release\\.ya?ml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/",
      "/(?:^|/)repository\\.ya?ml$/",
      "/(?:^|/)release\\.ya?ml$/"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "/(?:^|/)kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "value:\\s*(?<depName>[^\"'\\s]+):(?<currentValue>[^\"'\\s]+)(@sha256:(?<digest>[a-fA-F0-9]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
