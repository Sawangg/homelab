{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "apps/overlays/staging/**",
        "infrastructure/overlays/staging/**",
        "monitoring/overlays/staging/**",
        "clusters/staging/**",
        "omni/cluster-staging.yaml"
      ],
      "branchTopic": "staging-{{{depNameSanitized}}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}.{{{newMinor}}}{{/if}}{{/if}}{{#if separateMultipleMinor}}{{#if isMinor}}.{{{newMinor}}}{{/if}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}",
      "automerge": true,
      "addLabels": [
        "cluster: staging"
      ]
    },
    {
      "matchFileNames": [
        "apps/overlays/production/**",
        "infrastructure/overlays/production/**",
        "monitoring/overlays/production/**",
        "clusters/production/**",
        "omni/cluster-prod.yaml"
      ],
      "branchTopic": "prod-{{{depNameSanitized}}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}.{{{newMinor}}}{{/if}}{{/if}}{{#if separateMultipleMinor}}{{#if isMinor}}.{{{newMinor}}}{{/if}}{{/if}}.x{{#if isLockfileUpdate}}-lockfile{{/if}}",
      "automerge": false,
      "addLabels": [
        "cluster: prod"
      ]
    }
  ],
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/",
      "/(?:^|/)repository\\.ya?ml$/",
      "/(?:^|/)release\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "- op: (?:add|replace)\\s+\\s+path: /spec/(?:template|jobTemplate/spec/template)/spec/containers/\\d+/image\\s+\\s+value: (?<depName>.+?):(?<currentValue>[^@]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^cluster-(staging|prod)\\.ya?ml$/",
        "/omni.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "talos:\\s*\\n\\s*version:\\s*(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "siderolabs/talos",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^cluster-(staging|prod)\\.ya?ml$/",
        "/omni.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "kubernetes:\\s*\\n\\s*version:\\s*(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
